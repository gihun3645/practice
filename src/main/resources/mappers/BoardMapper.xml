<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.practice.dao.BoardDAO">

    <!-- 게시물 목록 -->
    <select id="list" resultType="com.study.practice.domain.Board">
        select
            board_id,
            title,
            content,
            writer,
            reg_date,
            view_count
        from
            board;
    </select>

    <!-- 게시물 작성 -->
    <insert id="write" parameterType="com.study.practice.domain.Board">
        insert into board (title, content, writer)
        values (#{title}, #{content}, #{writer})
    </insert>

    <!-- 게시물 조회 -->
    <select id="view" parameterType="int" resultType="com.study.practice.domain.Board">
        select
            board_id,
            title,
            content,
            writer,
            reg_date,
            view_count
        from
            board
        where
            board_id = #{board_id}
    </select>

    <!-- 게시물 수정 -->
    <update id="modify" parameterType="com.study.practice.domain.Board">
        UPDATE board
        SET
            title = #{title},
            content = #{content},
            writer = #{writer}
        WHERE
            board_id = #{board_id}
    </update>

    <!-- 게시물 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM board
        WHERE
            board_id = #{board_id}
     </delete>
</mapper>
